include globals.pug

div.row
  div.col.s12
    h4
      i.mdi.mdi-magnify
      ='{{ langManager.messages.search.title }}'

div.row
  div.col.s12
    +select(
      'document-type',
      'langManager.messages.upload.typeLabel',
      'langManager.messages.global.selectPlaceholder',
      'documents', '.name', '',
      'onDocumentTypeSelected()'
    )(
      '[(ngModel)]'='selectedDocument'
    )

div.row
  div.col.s12(
    '*ngFor'='let document of searchResults'
  )
    mz-card('[hoverable]'='true')
      mz-card-content
        +link()('(click)'='onDocumentLinkClicked(document)')
          ='{{ document.file_date }}'

div.row
  div.col.s12.center-align('*ngIf'='hasSearchResults == false')
    h5
      i.mdi.mdi-alert-octagon.red-text
      = '{{ langManager.messages.search.noSearchResults }}'

button.floating-btn(
  mz-button
  '[float]'='true'
  '[large]'='true'
  '(click)'='onSortButtonClick()'
)
  i.mdi.mdi-sort