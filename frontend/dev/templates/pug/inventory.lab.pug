include globals.pug

mz-tab(
  '[fixedTabWidth]'="'true'"
)
  mz-tab-item(
    '[active]'="'true'"
    '[label]'='langManager.messages.inventory.lab.categoriesTab'
  )
    div.row
      div.col.s12.m3
        +button(
          'button',
          'add-type',
          '{{ langManager.messages.inventory.lab.addTypeButton }}',
          'mdi mdi-plus'
        )(
          '(click)'='onAddTypeButtonClick()'
        )
      div.col.s12.m3
        +button(
          'button',
          'add-subtype',
          '{{ langManager.messages.inventory.lab.addSubTypeButton }}',
          'mdi mdi-plus'
        )(
          '(click)'='onAddSubTypeButtonClick()'
        )
      div.col.s12.m3
        +button(
          'button',
          'add-product',
          '{{ langManager.messages.inventory.lab.addProductButton }}',
          'mdi mdi-plus'
        )(
          '(click)'='onAddProductButtonClick()'
        )
      div.col.s12.m3
        +button(
          'button',
          'add-product',
          '{{ langManager.messages.inventory.lab.addSubProductButton }}',
          'mdi mdi-plus'
        )(
          '(click)'='onAddSubProductButtonClick()'
        )

      div.col.s12
        +table('langManager.messages.inventory.lab.tableHeaders')(
          class='bordered-cells'
        )
          tr('*ngFor'='let row of rows')
            td(
              '*ngIf'='row.type.name'
              '[attr.rowspan]'='row.type.rowspan'
            )
              ='{{ row.type.name }}'
            td(
              '*ngIf'='row.subtype.name'
              '[attr.rowspan]'='row.subtype.rowspan'
            )
              ='{{ row.subtype.name }}'
            td(
              '*ngIf'='row.subtype.name == null && row.area.name == null && row.subarea.name == null'
            )
            td(
              '*ngIf'='row.area.name'
              '[attr.rowspan]'='row.area.rowspan'
            )
              ='{{ row.area.name }}'
            td(
              '*ngIf'='row.area.name == null && row.subarea.name == null'
            )
            td(
              '*ngIf'='row.subarea.name'
            )
              ='{{ row.subarea.name }}'
            td(
              '*ngIf'='row.subarea.name == null'
            )
  mz-tab-item(
    '[label]'='langManager.messages.inventory.lab.labsTab'
  )
    div.row
      div.col.s6
        +button(
          'button',
          'add-lab',
          '{{ langManager.messages.inventory.lab.addLabButton }}',
          'mdi mdi-plus'
        )(
          '(click)'='onAddLabButtonClick()'
        )
    div.row
      div.col.s12
        +table(
          'langManager.messages.inventory.lab.labTableHeaders'
        )
          tr('*ngFor'='let row of laboratories')
            td='{{ row.name }}'
  mz-tab-item(
    '[label]'='langManager.messages.inventory.lab.productionUnitsTab'
  )
    div.row
      div.col.s6.m8
        +select(
          'zone',
          'langManager.messages.upload.zoneLabel',
          'langManager.messages.global.selectPlaceholder',
          'zones', '.name', '.id',
          'onZoneSelected($event)'
        )(
          '[(ngModel)]'='selectedZone'
        )
      div.col.s6.m4
        +button(
          'button',
          'add-producer',
          '{{ langManager.messages.inventory.lab.addProducerButton }}',
          'mdi mdi-plus'
        )(
          '(click)'='onAddProducerButtonClick()'
        )
    div.row('*ngIf'='producers.length > 0')
      div.col.s12
        +table(
          'langManager.messages.inventory.lab.labTableHeaders'
        )
          tr('*ngFor'='let row of producers')
            td='{{ row.name }}'