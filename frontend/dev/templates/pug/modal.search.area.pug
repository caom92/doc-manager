include globals.pug

mz-modal(
  '[options]'='modalOptions'
  '[fixedFooter]'='true'
  '[fullscreen]'='true'
)
  mz-modal-header
    div.container: div.row: div.col.s12
      ='{{ langManager.messages.search.title }}'
  mz-modal-content
    div.container
      form(
        '[formGroup]'='defaultDocumentSearchForm'
        novalidate
      )
        div.row
          +dateInput(
            'start-date', 
            'langManager.messages.search.startDateLabel',
            'langManager.messages.global.datePickerConfig',
            'col s12 m6'
          )(
            formControlName='startDate'
            mz-validation
            required
            '[errorMessageResource]'='langManager.messages.upload.errors.documentDate'
          )
          +dateInput(
            'end-date', 
            'langManager.messages.search.endDateLabel',
            'langManager.messages.global.datePickerConfig',
            'col s12 m6'
          )(
            formControlName='endDate'
            mz-validation
            required
            '[errorMessageResource]'='langManager.messages.upload.errors.documentDate'
          )
          div.col.s12.m3
            +select(
              'zone', 'langManager.messages.upload.zoneLabel', 'langManager.messages.global.selectPlaceholder',
              'zones', '.name', '',
              'onZoneSelected()'
            )(
              formControlName='zone'
            )

          div.col.s12.m3
            +select(
              'ranch', 'langManager.messages.upload.ranchLabel', 'langManager.messages.global.selectPlaceholder',
              'ranches', '.name', '',
              'onRanchSelected()'
            )(
              formControlName='ranch'
            )

          div.col.s12.m3
            +select(
              'producer', 'langManager.messages.upload.producerLabel', 'langManager.messages.global.selectPlaceholder',
              'producers', '.name', '',
              'onProducerSelected()'
            )(
              formControlName='producer'
            )

          div.col.s12.m3
            +select(
              'area', 'langManager.messages.upload.areaLabel', 'langManager.messages.global.selectPlaceholder',
              'areas', '.name', ''
            )(
              formControlName='area'
            )
  mz-modal-footer
    +button(
      'search',
      'search-document',
      '{{ langManager.messages.search.buttonLabel }}',
      'mdi mdi-magnify'
    )(
      '[disabled]'='!defaultDocumentSearchForm.valid'
      '(click)'='onDefaultDocumentSearch()'
      mz-modal-close
    )