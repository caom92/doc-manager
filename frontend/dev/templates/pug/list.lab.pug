include globals.pug

//- Despliega la info en forma de tarjetas
div.col.s12(
  '*ngFor'='let document of searchResults; let i = index'
)
  mz-card('[hoverable]'='true')
    mz-card-title
      ='{{ document.file_date }}'
    mz-card-content
      div.row 
        div.col.s12
          span(style='font-weight: bold')
            ='{{ langManager.messages.list.lab.tableHeaders[2] }}: '
          span
            ='{{ document.lab_name }}'

        div.col.s12
          span(style='font-weight: bold')
            ='{{ langManager.messages.list.lab.tableHeaders[1] }}: '
          span
            ='{{ document.zone_name }}'

        div.col.s12
          span(style='font-weight: bold')
            ='{{ langManager.messages.list.lab.tableHeaders[3] }}: '
          span
            ='{{ document.ranch_name }}'

        div.col.s12
          span(style='font-weight: bold')
            ='{{ langManager.messages.list.lab.tableHeaders[4] }}: '
          span
            ='{{ document.producer_name }}'
      
        div.col.s12
          span(style='font-weight: bold')
            ='{{ langManager.messages.list.lab.tableHeaders[5] }}: '
          span
            ='{{ document.area_name }}'
      
    mz-card-action
      +link()(
        class='blue-text'
        '(click)'='parent.onDocumentLinkClicked(document)'
      )
        ='{{ langManager.messages.list.view }}'
      +link()(
        class='red-text'
        '(click)'='parent.onDocumentDeletionRequested("lab", document.id, i)'
      )
        ='{{ langManager.messages.global.erase }}'

